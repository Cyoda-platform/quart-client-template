{
    "description": "FSM for adopt_request workflow",
    "initial_state": "none",
    "states": {
        "adopt_pet": {
            "transitions": {
                "adopt_if_available": {
                    "action": {
                        "name": "process_mark_adopted"
                    },
                    "next": "final"
                },
                "adopt_if_not_available": {
                    "action": {
                        "name": "process_adopt_request"
                    },
                    "next": "final"
                }
            }
        },
        "check_availability": {
            "transitions": {
                "availability_check": {
                    "action": {
                        "name": "process_check_availability"
                    },
                    "next": "adopt_pet"
                }
            }
        },
        "final": {
            "transitions": {}
        },
        "none": {
            "transitions": {
                "validate_request": {
                    "action": {
                        "name": "process_adopt_request"
                    },
                    "next": "check_availability"
                }
            }
        }
    },
    "version": "1.0",
    "workflow_name": "adopt_request_workflow"
}