{
  "description": "Workflow to prepare pet for an exhibition using a finite-state machine",
  "initial_state": "none",
  "states": {
    "none": {
      "transitions": {
        "start_preparation": {
          "action": {
            "name": "start_preparation"
          },
          "next": "grooming"
        }
      }
    },
    "grooming": {
      "transitions": {
        "finish_grooming": {
          "action": {
            "name": "finish_grooming"
          },
          "next": "health_check"
        }
      }
    },
    "health_check": {
      "transitions": {
        "health_not_ok": {
          "action": {
            "name": "schedule_veterinary_care"
          },
          "condition": {
            "function": {
              "name": "is_health_not_ok"
            },
            "type": "function"
          },
          "next": "veterinary_care"
        },
        "health_ok": {
          "action": {
            "name": "approve_health_check"
          },
          "condition": {
            "function": {
              "name": "is_health_ok"
            },
            "type": "function"
          },
          "next": "training"
        }
      }
    },
    "veterinary_care": {
      "transitions": {
        "care_complete": {
          "action": {
            "name": "finish_veterinary_care"
          },
          "next": "training"
        }
      }
    },
    "training": {
      "transitions": {
        "training_complete": {
          "action": {
            "name": "complete_training"
          },
          "next": "exhibition_ready"
        }
      }
    },
    "exhibition_ready": {
      "transitions": {
        "start_exhibition": {
          "action": {
            "name": "start_exhibition"
          },
          "next": "exhibition"
        }
      }
    },
    "exhibition": {
      "transitions": {
        "exhibition_done": {
          "action": {
            "name": "finish_exhibition"
          },
          "next": "none"
        }
      }
    }
  },
  "workflow_name": "prepare_pet_for_exhibition"
}